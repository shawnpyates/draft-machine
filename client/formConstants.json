{
  "register": {
    "title": "Register",
    "passwordMinimumLength": 8,
    "inputs": [
      {
        "name": "email",
        "text": "E-mail",
        "type": "text",
        "isWide": true,
        "enabled": true
      },
      {
        "name": "firstName",
        "text": "First Name",
        "type": "text",
        "isWide": true,
        "enabled": true
      },
      {
        "name": "lastName",
        "text": "Last Name",
        "type": "text",
        "isWide": true,
        "enabled": true
      },
      {
        "name": "passwordFirstInsertion",
        "text": "Create a Password",
        "type": "password",
        "isWide": true,
        "enabled": true
      },
      {
        "name": "passwordSecondInsertion",
        "text": "Confirm Your Password",
        "type": "password",
        "isWide": true,
        "enabled": true
      },
      {
        "name": "submitButton",
        "text": "Sign Up",
        "type": "submit",
        "isWide": true,
        "enabled": true
      }
    ],
    "errorMessages": {
      "invalidEmail": "Please enter a valid e-mail address.",
      "missingField": "Please fill in all fields.",
      "passwordsDidNotMatch": "Your passwords did not match. Please try again.",
      "tooShort": "Your password must contain at least 8 characters.",
      "unexpected": "An unexpected error occurred. Please try again."
    }
  },
  "login": {
    "title": "Log In",
    "inputs": [
      {
        "name": "email",
        "text": "E-mail",
        "type": "text",
        "isWide": true,
        "enabled": true
      },
      {
        "name": "password",
        "text": "Password",
        "type": "password",
        "isWide": true,
        "enabled": true
      },
      {
        "name": "submitButton",
        "text": "Log In",
        "type": "submit",
        "enabled": true
      }
    ],
    "errorMessages": {
      "cannotFindUser": "Could not find any user with that e-mail address.",
      "incorrectPassword": "The password you have typed is incorrect.",
      "invalidEmail": "Please enter a valid e-mail address.",
      "unexpected": "An unexpected error occurred. Please try again."
    }
  },
  "draft": {
    "title": "Create a New Draft",
    "inputs": [
      {
        "name": "name",
        "text": "Name Your Draft",
        "type": "text",
        "isWide": true,
        "enabled": true
      },
      {
        "name": "shouldScheduleTime",
        "text": "Would you like to schedule a time for your draft?",
        "type": "buttonGroup",
        "dataType": "boolean",
        "enabled": true,
        "options": [
          {
            "label": "Yes",
            "value": true,
            "isWide": false
          },
          {
            "label": "No",
            "value": false,
            "isWide": false
          }
        ]
      },
      {
        "name": "scheduledTime",
        "text": "Please select a date and time.",
        "type": "scheduler",
        "enabled": true,
        "dependsOn": {
          "name": "shouldScheduleTime",
          "requiredOptionValue": true
        }
      },
      {
        "name": "submitButton",
        "text": "Create",
        "type": "submit",
        "enabled": true
      }
    ]
  },
  "player": {
    "title": "Create a New Player",
    "inputs": [
      {
        "name": "name",
        "text": "Player's Name",
        "type": "text",
        "isWide": true,
        "enabled": true
      },
      {
        "name": "email",
        "text": "Player's Email (optional)",
        "type": "text",
        "isWide": true,
        "enabled": true
      },
      {
        "name": "position",
        "text": "Player's Position",
        "type": "select",
        "enabled": true,
        "placeholder": "Please Select",
        "options": [
          "Goaltender",
          "Defence",
          "Left/Right Wing",
          "Center"
        ]
      },
      {
        "name": "submitButton",
        "text": "Create",
        "type": "submit",
        "enabled": true
      }
    ],
    "errorMessages": {
      "invalidEmail": "Please enter a valid e-mail address.",
      "missingField": "Please fill in all fields."
    }
  },
  "team": {
    "title": "Create a New Team",
    "inputs": [
      {
        "name": "name",
        "text": "Name Your Team",
        "type": "text",
        "isWide": true,
        "enabled": true
      },
      {
        "name": "shouldFindOwnDraft",
        "text": "A team must belong to a draft. Would you like to select from the drafts that you own, or would you like to request to join a different member's draft?",
        "type": "buttonGroup",
        "dataType": "boolean",
        "enabled": true,
        "options": [
          {
            "label": "Choose from my own drafts",
            "value": true,
            "isWide": true
          },
          {
            "label": "Request to join another member's draft",
            "value": false,
            "isWide": true
          }
        ]
      },
      {
        "name": "draftListSelection",
        "text": "Please select a draft to add this team to:",
        "type": "buttonGroup",
        "dataType": "string",
        "enabled": true,
        "options": null,
        "dependsOn": {
          "name": "shouldFindOwnDraft",
          "requiredOptionValue": true
        }
      },
      {
        "name": "draftNameFromTextField",
        "fieldTitle": "Provide the name of the draft that you would like to add your team to. The owner of the draft will be contacted with your request.",
        "text": "Type in Draft Name",
        "type": "text",
        "isWide": false,
        "enabled": true,
        "dependsOn": {
          "name": "shouldFindOwnDraft",
          "requiredOptionValue": false
        }
      },
      {
        "name": "submitButton",
        "text": "Create",
        "type": "submit",
        "enabled": true
      }
    ]
  },
  "updateUser": {
    "title": "Update Your Email",
    "inputs": [
      {
        "name": "email",
        "text": "E-mail",
        "type": "text",
        "isWide": true,
        "enabled": true
      },
      {
        "name": "submitButton",
        "text": "Submit Updates",
        "type": "submit",
        "enabled": true
      }
    ],
    "errorMessages": {
      "invalidEmail": "Please enter a valid e-mail address.",
      "missingField": "Please fill in all fields.",
      "unexpected": "An unexpected error occurred. Please try again."
    }
  }
}
